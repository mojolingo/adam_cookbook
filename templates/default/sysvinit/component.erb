PATH=/opt/rbenv/shims:/opt/rbenv/bin:/usr/local/sbin:/usr/local/bin:/usr/bin:/usr/sbin:/sbin:/bin
export PATH

ADAM_BASEDIR="<%= @base_directory %>"
ADAM_ENV="/etc/adam/environment"

case "$1" in
start)
	source $ADAM_ENV
	${ADAM_BASEDIR}
	;;
stop)
	;;
restart)
	;;
force-reload)
	;;
status)
	;;
esac

exit 0
